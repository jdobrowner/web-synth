{
  "name": "web-synth",
  "version": "1.0.0",
  "description": "A web based synthesizer",
  "main": "js/index.js",
  "scripts": {
    "build": "rm -rf build && mkdir -p build && npm run build:html && npm run build:css && npm run build:js",
    "build:html": "rm -f build/index.html && cp public/index.html build/",
    "build:css": "rm -f build/style.css && lessc public/styles/style.less build/style.css",
    "build:js": "rm -f build/app.js && webpack",
    "watch": "npm run watch:css && npm run watch:html && npm run watch:js",
    "watch:html": "chokidar-cmd -c 'npm run build:html' -t public/index.html",
    "watch:css": "chokidar-cmd -c 'npm run build:css' -t public/styles/**/*.less",
    "watch:js": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdobrowner/web-synth.git"
  },
  "author": "Jason Dobrowner",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jdobrowner/web-synth/issues"
  },
  "homepage": "https://github.com/jdobrowner/web-synth#readme",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "chokidar": "^1.6.1",
    "chokidar-cmd": "^1.2.1",
    "less": "^2.7.1",
    "webpack": "^1.13.3"
  },
  "dependencies": {
    "jquery": "^3.1.1",
    "jquery-ui": "^1.12.1",
    "tone": "^0.8.0",
    "webmidi": "^2.0.0-beta.3"
  }
}
